                                            <th>Total Hours</th>
                                            <th>Cost Centre </th>
                                            <th>Leave Reason</th>


                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                
                                                @Html.HiddenFor(m => item.Timesheet_Serial_Number)
