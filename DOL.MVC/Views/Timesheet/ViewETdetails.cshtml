                                                @*@Html.TextAreaFor(model => model., 10, 120, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })*@

                                                @Html.TextArea("item.txtSupComment", (string)ViewBag.CommentSupervisor, new { style = "width: 100%; max-width: 100%;" })
                                            </td>
