@model DOL.MVC.Models.BankholidaysViewModels
@{
    ViewBag.Title = "New Bank Holiday";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" href="/resources/demos/style.css">
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>

<h2>@ViewBag.Title.</h2>



@using (Html.BeginForm("AddNewBankHoliday", "Maintenance", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()


    <div id="main-wrapper">
        <div class="row">
            <div class="row">
                <div class="col-md-12">
                    <div>
                        <h4>Create a new Holiday.</h4>
                    </div>
                    <div class="panel panel-white">


                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @*@Html.LabelFor(m => m.description, new { style = "width:10%; ", @class = "col-md-2 control-label " })*@
                          
                            <div class="col-md-10" style="margin-left:10px;">
                                Holiday Name:
                                @Html.TextBoxFor(m => m.description, new { style = "width:50%;", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @*@Html.LabelFor(m => m.holiday_date, new { @class = "col-md-2 control-label" })*@
                         
                            <div class="col-md-10" style="margin-left:10px;">
                                
                                   Date of Holiday

                                <div>
                                    @*@Html.TextBoxFor(m => m.holiday_date,  new { style = "width:125px;height:28px", @class = "datepicker" })*@

                                    @*@Html.TextBox("holiday_date", new { style = "width:125px;height:28px", @class = "datepicker" })*@


                                    @Html.TextBoxFor(c => c.holiday_date, new { id = "datepicker" })

                                </div>
                            </div>

                        </div>


                        <div class="form-group">

                       
                            <div class="col-md-10" style="margin-left:10px;">

                                Status:
                                <div>
                                    @*<select name="Staus" id="Status">
                                        <option value="A">Active</option>
                                        <option value="I">In-Active</option>
                                    </select>*@

                                    @Html.DropDownList("Status", new List<SelectListItem>
                                          {
                                            new SelectListItem{ Text="Active", Value = "A" },
                                            new SelectListItem{ Text="Not-Active", Value = "N" }
                                         })
                                    
                                </div>
                            </div>
                        </div>
                        <p>
                            <br />
                          
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-1">
            <input type="submit" class="btn btn-default" value="Add This Holiday" />
        </div>
    </div>

}
    
                        @section Scripts {
                            @Scripts.Render("~/bundles/jqueryval")
                        }
